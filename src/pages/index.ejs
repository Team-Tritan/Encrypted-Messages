<% if (encrypt) {%>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <title>encrypt</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body class="bg-black text-white h-screen flex items-center justify-center">
    <div class="flex flex-col items-center">
      <div
        class="max-w-3xl p-8 bg-black rounded-lg border-2 border-purple-500 shadow-lg"
      >
        <h1 class="text-3xl font-semibold mb-4">Speak your mind.</h1>
        <p class="text-gray-500 mb-6">
          End to end encrypted. Only you and the receiver can read the message,
          deleted after the first read.
        </p>
        <div class="mb-6">
          <textarea
            id="textarea"
            rows="8"
            placeholder="Say some stuff"
            class="w-full p-2 bg-black outline-none"
          ></textarea>
        </div>
      </div>
      <button
        id="send"
        class="mt-10 bg-purple-900 text-white py-2 px-4 w-1/5 rounded-md"
      >
        Send
      </button>

      <button
        id="copy"
        class="mt-10 bg-purple-900 text-white py-2 px-4 w-1/5 rounded-md"
      >
        Copy
      </button>

      <button
        id="reset"
        class="mt-10 bg-purple-900 text-white py-2 px-4 w-1/5 rounded-md"
      >
        Reset
      </button>
    </div>
  </body>
</html>

<script>
  $(document).ready(function () {
    $("#copy").hide();
    $("#reset").hide();
  });

  $("#send").click(function () {
    let text = $("#textarea").val();

    if (text.length < 1) {
      alert("Please enter some text.");
      return;
    }

    $("#textarea").val("Encrypting...");

    $.ajax({
      type: "POST",
      url: "/api/new",
      data: JSON.stringify({ text: text }),
      contentType: "application/json",
      success: function (data) {
        let url = `https://encrypt.tritan.gg/?i=${data.id}&t=${data.token}`;

        $("#textarea").val(url).prop("readonly", true).attr("disabled", true);

        $("#send").hide();
        $("#copy").show();
      },
      error: function (xhr, status, error) {
        alert("Error: " + error);
      },
    });
  });

  $("#copy").click(function () {
    let text = $("#textarea").val();

    navigator.clipboard.writeText(text).then(
      function () {
        alert("Copied to clipboard.");
      },
      function (err) {
        alert("Error: " + err);
      }
    );

    $("#copy").hide();
    $("#reset").show();
  });

  $("#reset").click(function () {
    $("#textarea").val("").prop("readonly", false).attr("disabled", false);

    $("#reset").hide();
    $("#send").show();
  });
</script>
<% } %> 

<% if (decrypt) {%>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <title>encrypt</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body class="bg-black text-white h-screen flex items-center justify-center">
    <div class="flex flex-col items-center">
      <div
        class="max-w-3xl p-8 bg-black rounded-lg border-2 border-purple-500 shadow-lg"
      >
        <h1 class="text-3xl font-semibold mb-4">Speak your mind.</h1>
        <p class="text-gray-500 mb-6">
          End to end encrypted. Only you and the receiver can read the message,
          deleted after the first read.
        </p>
        <div class="mb-6">
          <textarea
            id="textarea"
            rows="8"
            placeholder="Say some stuff"
            class="w-full p-2 bg-black outline-none"
          ></textarea>
        </div>
      </div>
      <button
        id="reset"
        class="mt-10 bg-purple-900 text-white py-2 px-4 w-1/5 rounded-md"
      >
        Reset
      </button>
    </div>
  </body>
</html>

<script>
  $(document).ready(function () {
    let text = $("#textarea").val();

    $.ajax({
      type: "GET",
      url: "/api/fetch?i=<%=i%>&t=<%=t%>",
      data: JSON.stringify({ text: text }),
      contentType: "application/json",
      success: function (data) {
        let text = data.text;

        $("#textarea").val(text).prop("readonly", true).attr("disabled", true);
      },
      error: function (xhr, status, error) {
        let text = xhr.responseJSON.message;

        $("#textarea")
          .val(`${text}`)
          .prop("readonly", true)
          .attr("disabled", true);
      },
    });
  });

  $("#reset").click(function () {
    window.location.href = "/";
  });
</script>
<% } %>
